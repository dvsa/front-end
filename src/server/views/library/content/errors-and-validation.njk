{% extends 'layouts/library.layout.njk' %}

{% set pageTitle = 'MOT Library - Erros and Validation' %}

{% block content %}

  {{ components.heading(text='Error message and summary box', tag='h2', size='medium') }}

  {% call components.displayCode() %}

    {{ components.errorSummary(
      heading='Message to alert the user to a problem goes here',
      headingId='error-summary-example-heading-one',
      description='Optional description of the errors and how to correct them',
      items=[
        {
          link: '#example-personal-details',
          text: 'Descriptive link to the question with an error'
        }
      ]
    ) }}

    {{ components.heading(
      text='Check your personal details',
      tag='h2',
      size='large')
    }}

    {{ components.paragraph(
      text='Look at your name, signature and other details.'
    ) }}

    {% call components.form() %}

      {% call components.formGroup(
        label='Are your personal details correct and up-to-date?',
        labelBold=true,
        error='Error message about personal details goes here'
      ) %}

        {{ components.radio(
          text='Yes, my personal details are correct',
          value='Yes',
          id='personal_details_yes',
          name='personalDetails'
        ) }}

        {{ components.radio(
          text='No, some details are wrong or have changed',
          value='No',
          id='personal_details_no',
          name='personalDetails'
        ) }}

      {%- endcall %}

      {{ components.button(text='Continue') }}

    {%- endcall %}
  {%- endcall %}

  {{ components.heading(text='Highlight errors in forms', tag='h2', size='medium') }}

  {% call components.displayCode() %}

    {{ components.errorSummary(
      heading='Message to alert the user to a problem goes here',
      headingId='error-summary-example-heading-two',
      description='Optional description of the errors and how to correct them',
      items=[
        {
          link: '#example-full-name',
          text: 'Descriptive link to the question with an error'
        },
        {
          link: '#example-ni-number',
          text: 'Descriptive link to the question with an error'
        }
      ]
    ) }}

    {{ components.heading(
      text='Your personal details',
      tag='h2',
      size='large')
    }}

    {{ components.field(
      label='Full name',
      labelBold=true,
      id='full-name',
      hint='As shown on your birth certificate or passport',
      error='Error message about full name goes here'
    ) }}

    {{ components.field(
      label='National Insurance number',
      labelBold=true,
      id='full-name',
      hint='It’s on your National Insurance card, benefit letter, payslip or P60. <br>For example, ‘QQ 12 34 56 C’.',
      error='Error message about National Insurance number goes here'
    ) }}

    {{ components.button(text='Continue') }}

  {%- endcall %}

{% endblock %}