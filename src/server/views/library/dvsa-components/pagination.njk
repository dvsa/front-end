{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Pagination' %}

{% block content %}

  {{ components.heading(
    text='Pagination',
    tag='h2',
    size='medium'
  ) }}

  {{ components.paragraph(
    text="This page demonstrates how to display pagination in the MOT system. Pagination should only be used when a large amount of records are shown. If the record count is less than '10' then don't show pagination at all."
  ) }}

  {{ components.heading(
    text='First item',
    tag='h2',
    size='medium'
  ) }}

