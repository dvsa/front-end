{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Filtered data' %}

{% block content %}

  {{ components.heading(
    text='Filtered data',
    tag='h2',
    size='medium'
  ) }}

  {{ components.paragraph(
    text='This page demonstrates how to display filtered data in the MOT system.',
    lead=true
  ) }}

  {{ components.list(
    items=[
      { text: 'A summary of the number of results, applied filters or search terms should be including above the table' },
      { text: 'Column headers should use the <code class="dev-code-snippet">th</code> tag' },
      { text: 'Sortable columns should be indicated using a hyperlink' },
      { text: 'The default sort should be sensible and indicated with a sort arrow' },
      { text: 'If required, download options should appear in sentence format below the results table' }
    ],
    type='number'
  ) }}

  {{ components.heading(
    text='CSS class summary',
    tag='h4',
    size='small'
  ) }}

  {{ components.paragraph(
    text='A summary of the CSS classes used is as follows:'
  ) }}

  {{ components.list(
    items=[
      { text: 'Apply <code class="dev-code-snippet">sort-desc</code> and <code class="dev-code-snippet">sort-asc</code> to the sort hyperlink to indicate appropriate sort direction' },
      { text: 'Numerical data (and associated column header) should be formatted using the standard <code class="dev-code-snippet">numeric</code> class' },
      { text: 'Other data type values should have the <code class="dev-code-snippet">tabular</code> class applied which negates right align styles' }
    ],
    type='number'
  ) }}

  {% call components.displayCode() %}
  <h2 class="result__group-heading">
    <strong>5</strong> purchases in the
    <strong>last 30 days</strong>
  </h2>

  <table class="result-table">
    <thead>
      <tr>
        <th class="">Transaction
          <br />number</th>
        <th scope="col" class="">
          <a href="#" class="">Date</a>
        </th>
        <th scope="col" class="">
          <a href="#" class="">Payment
            <br />method</a>
        </th>
        <th scope="col" class="numeric">
          <a href="#" class="sort-desc">Quantity</a>
        </th>
        <th scope="col" class="numeric">
          <a href="#" class="">Cost</a>
        </th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td class="tabular">
          <a href="#">MOT-2015-001234</a>
        </td>
