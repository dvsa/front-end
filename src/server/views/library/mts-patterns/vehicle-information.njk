{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Patterns' %}

{% block content %}

  {{ components.heading(
    text='Vehicle information',
    tag='h1',
    size='medium'
  ) }}

  {{ components.paragraph(
    text='Example of vehicle search showing vehicle information prior to selecting vehicle for test. Makes it easy for testers to verify the vehicle presented for test is the one being selected.',
    lead=true
  ) }}
  
  {{ components.heading(
    text='Coded examples',
    tag='h3',
    size='small'
  ) }}
  
  {{ components.link(text='Find a Vehicle', paragraph=true, url='/prototypes/responsive-mot/vehicle-result', back=false) }}
  {{ components.link(text='Confirm Vehicle and start test', paragraph=true, url='/prototypes/responsive-mot/confirm-vehicle-details', back=false) }}
 
 
  <p><strong>Mobile view</strong></p>
  <a href="/prototypes/responsive-mot/vehicle-result">
    <img src="/images/patterns/vehicle-details-mobile.png" alt="" />
  </a>
  
  <p><strong>Tablet and Desktop view</strong></p>
  <a href="/prototypes/responsive-mot/vehicle-result">
    <img src="/images/patterns/vehicle-details-tablet.png" alt="" />
  </a>

