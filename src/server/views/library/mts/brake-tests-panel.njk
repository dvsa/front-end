{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Brake tests panel' %}

{% block content %}

  {{ components.heading(
    text='Default',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel">
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Brake test</h3>
      </div>
      <a href="#" class="button">Add brake test</a>
  </div>
  {%- endcall %}

  {{ components.heading(
    text='With data',
    tag='h2',
    size='medium'
  ) }}

  {{ components.paragraph(
    text='The primary call to action reads <code class="dev-code-snippet">Edit brake test</code>. 
    The secondary call to action reads <code class="dev-code-snippet">or view brake test results</code>.'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel">
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Brake test</h3>
        <h3 class="action-panel__value">Failed</h3>
      </div>
      <a href="#" class="button">Edit brake test</a>
      <span class="action-panel__secondary-action">or
        <a href="#">view brake test results</a>
      </span> 
  </div>
  {%- endcall %}

  {{ components.heading(
    text='After successful re-test',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel">
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Brake test</h3>
        <h3 class="action-panel__value">Failed</h3>
      </div>
      <a href="#" class="button">Edit brake test</a>
      <span class="action-panel__secondary-action">or
        <a href="#">view brake test results</a>
      </span> 
  </div>
  {%- endcall %}

  {{ components.heading(
    text='With defects',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="action-panel"> 
      <div class="action-panel__container">
        <h3 class="action-panel__heading">Brake test</h3> 
        <h3 class="action-panel__value">Failed</h3>
        <span class="action-panel__meta">Initial test failed</span> 
      </div>
      <div class="action-panel__action-group">
          <a href="#" class="button">Edit brake test</a>
          <span class="action-panel__secondary-action">or
              <a href="#">view brake test results</a>
          </span>
      </div>
  </div>

  <div class="defect-summary">
    <div id="rfrList">
      <h3 class="defect-summary__heading">
        <span class="badge--alert">3</span>
        <span class="defect-summary__heading-type">Failures</span>
      </h3>

      <ol>
        <li class="defect">
          <p class="defect__meta">Parking brake efficiency below requirements.</p>
        </li>

        <li class="defect">
          <strong class="defect__title">Brake imbalance</strong>
          <p class="defect__meta">Brakes imbalanced across an axle, front</p>
        </li>

        <li class="defect">
          <strong class="defect__title">Brake imbalance</strong>
          <p class="defect__meta">Brakes imbalanced across an axle, rear (Axle 2)</p>
        </li>
      </ol>
    </div>
  </div>
  {%- endcall %}

{% endblock %}