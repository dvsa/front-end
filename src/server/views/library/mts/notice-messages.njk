{% extends 'layouts/library-mts.layout.njk' %}

{% set pageTitle = 'MOT Library - Notice messages' %}

{% block content %}

  {{ components.heading(
    text='Success',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="message--success">
    <p><strong>This failure has been added:</strong><br> Passenger grab handle insecure</p>
  </div>
  {%- endcall %}

  {{ components.heading(
    text='Failure',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="message--failure">
    <p><strong>This is a message:</strong><br> Lorem ipsum dolor sit amet.</p>
  </div>
  {%- endcall %}

  {{ components.heading(
    text='Information',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="message--information">
    <p><strong>This is a message:</strong><br> Lorem ipsum dolor sit amet.</p>
  </div>
  {%- endcall %}

  {{ components.heading(
    text='Important',
    tag='h2',
    size='medium'
  ) }}

  {% call components.displayCode() %}
  <div class="message--important">
    <p><strong>This is a message:</strong><br> Lorem ipsum dolor sit amet.</p>
  </div>
  {%- endcall %}
 
  {{ components.heading(
    text='Notices with white background',
    tag='h2',
    size='medium'
  ) }}  

  {% call components.displayCode() %}
  <div class="notice">
  <i class="icon icon-important">
       <span class="visually-hidden">Warning</span>
     </i>
  <p><strong>If the changes do not meet the requirements for authorisation, DVSA will not approve the changes and the VTS may have to stop testing.</strong>
  </p>
  </div>
  {%- endcall %}
   
  {% call components.displayCode() %}
  <div class="notice">
    <i class="icon icon-file-download"><span class="visually-hidden">Download All recalls since 1992</span></i>
    <p><a href="#"><strong>All recalls since 1992</strong> (CSV, 50kb)</a></p>
  </div>
  {%- endcall %}

{% endblock %}