{% macro dvsaBanner(mainText='', headingType='h1', secondaryText=false, type, thin=false, contentMode=false) %}
  
    <div class="dvsa-banner {{ 'dvsa-banner--' + type if type }} {{'dvsa-banner--thin' if thin {{'dvsa-banner--content' if contentMode }}">
        <{{headingType}} class="dvsa-banner__heading-large">{{ mainText }}</{{headingType}}>
        {% if secondaryText %}
            <p class='dvsa-banner__secondary-text'>{{ secondaryText }}</p>
        {% endif %}
    </div>
{% endmacro %}