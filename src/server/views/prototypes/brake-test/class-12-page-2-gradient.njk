{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Brake test class 12 - Page 2 (Gradient)' %}

{% block content %}

  <header class="content-header">
    <h1>
      <span class="content-header__type">MOT testing</span>
      <span class="content-header__title">Add brake test results</span>
    </h1>
  </header>

  <div class="dvsa-vehicle-summary vehicle-summary">
    <div class="dvsa-vehicle-summary__wrapper">
      <ul class="dvsa-vehicle-summary__items">
        <li class="dvsa-vehicle-summary__item" id="registrationNumber">
          <span class="dvsa-vehicle-summary__heading">
            Registration number
          </span>

          <span class="dvsa-vehicle-summary__value">
            AA83LOX </span>
        </li>

        <li class="dvsa-vehicle-summary__item" id="make">
          <span class="dvsa-vehicle-summary__heading">
            Make
          </span>

          <span class="dvsa-vehicle-summary__value">
            PEUGEOT, TWEET </span>
        </li>
      </ul>

      <div class="dvsa-vehicle-summary__panel" id="vehicle-summary-more">

        <dl class="dvsa-mts-dl dvsa-mts-dl--half">
          <dt class="dvsa-mts-dl__dt">
            VIN/Chassis </dt>

          <dd class="dvsa-mts-dl__dd" id="VINChassis">
            XOLAAKAAAAA821583 </dd>
          <dt class="dvsa-mts-dl__dt">
            Transmission </dt>

          <dd class="dvsa-mts-dl__dd" id="transmission">
            N/A </dd>
          <dt class="dvsa-mts-dl__dt">
            Fuel type </dt>

          <dd class="dvsa-mts-dl__dd" id="fuelType">
            Petrol </dd>
        </dl>
        <dl class="dvsa-mts-dl dvsa-mts-dl--half">
          <dt class="dvsa-mts-dl__dt">
            Body type </dt>

          <dd class="dvsa-mts-dl__dd" id="bodyType">
            Motorcycle </dd>
          <dt class="dvsa-mts-dl__dt">
            Cylinder capacity </dt>

          <dd class="dvsa-mts-dl__dd" id="cylinderCapacity">
            125 </dd>
          <dt class="dvsa-mts-dl__dt">
            First used </dt>

          <dd class="dvsa-mts-dl__dd" id="firstUsed">
            6 June 2015 </dd>
        </dl>
      </div>
    </div>
  </div>


  <form method="POST">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    <div class="form-group">
      <fieldset>
        <legend>
          <h3 class="heading-medium">
            Gradient test efficiency for control one
          </h3>
        </legend>

        <div class="multiple-choice">
          <input id="gradientControlEfficiencyAbove30Percent" type="radio" name="gradientControl1" value="30% and above" required="">

          <label for="gradientControlEfficiencyAbove30Percent">
            30% and above </label>
        </div>

        <div class="multiple-choice">
          <input id="gradientControlEfficiencyBetween30And25" type="radio" name="gradientControl1" value="Between 25% and 30%" required="">

          <label for="gradientControlEfficiencyBetween30And25">
            Between 25% and 30% </label>
        </div>

        <div class="multiple-choice">
          <input id="gradientControlEfficiencyBelow25Percent" type="radio" name="gradientControl1" value="Below 25%" required="">

          <label for="gradientControlEfficiencyBelow25Percent">
            Below 25% </label>
        </div>
      </fieldset>

      <fieldset>
        <legend>
          <h3 class="heading-medium">
            Gradient test efficiency for control two
          </h3>
        </legend>

        <div class="multiple-choice">
          <input id="gradientControl2EfficiencyAbove30Percent" type="radio" name="gradientControl2" value="30% and above" required="">

          <label for="gradientControl2EfficiencyAbove30Percent">
            30% and above </label>
        </div>

        <div class="multiple-choice">
          <input id="gradientControl2EfficiencyBetween30And25" type="radio" name="gradientControl2" value="Between 25% and 30%" required="">

          <label for="gradientControl2EfficiencyBetween30And25">
            Between 25% and 30% </label>
        </div>

        <div class="multiple-choice">
          <input id="gradientControl2EfficiencyBelow25Percent" type="radio" name="gradientControl2" value="Below 25%" required="">

          <label for="gradientControl2EfficiencyBelow25Percent">
            Below 25% </label>
        </div>
      </fieldset>
    </div>

    <div class="form-group">
      <input type="hidden" id="vehicleClass" name="vehicleClass" value="1" />
      <input type="submit" id="brake_test_results_submit" name="submit" value="Submit" class="button" />

      <p>
        <a id="brake_test_results_cancel" href="#">
          Cancel
        </a>
      </p>
    </div>

  </form>
  
{% endblock %}
