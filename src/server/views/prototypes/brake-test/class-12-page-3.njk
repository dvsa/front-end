{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Brake test class 12 - Page 3' %}

{% block content %}

  <header class="content-header">
    <h1>
      <span class="content-header__type">MOT testing</span>
      <span class="content-header__title">Brake test summary</span>
    </h1>
  </header>

  <div class="dvsa-vehicle-summary vehicle-summary">
    <div class="dvsa-vehicle-summary__wrapper">
      <ul class="dvsa-vehicle-summary__items">
        <li class="dvsa-vehicle-summary__item" id="registrationNumber">
          <span class="dvsa-vehicle-summary__heading">
            Registration number
          </span>

          <span class="dvsa-vehicle-summary__value">
            AA83LOX </span>
        </li>

        <li class="dvsa-vehicle-summary__item" id="make">
          <span class="dvsa-vehicle-summary__heading">
            Make
          </span>

          <span class="dvsa-vehicle-summary__value">
            PEUGEOT, TWEET </span>
        </li>
      </ul>

      <div class="dvsa-vehicle-summary__panel" id="vehicle-summary-more">

        <dl class="dvsa-mts-dl dvsa-mts-dl--half">
          <dt class="dvsa-mts-dl__dt">
            VIN/Chassis </dt>

          <dd class="dvsa-mts-dl__dd" id="VINChassis">
            XOLAAKAAAAA821583 </dd>
          <dt class="dvsa-mts-dl__dt">
            Transmission </dt>

          <dd class="dvsa-mts-dl__dd" id="transmission">
            N/A </dd>
          <dt class="dvsa-mts-dl__dt">
            Fuel type </dt>

          <dd class="dvsa-mts-dl__dd" id="fuelType">
            Petrol </dd>
        </dl>
        <dl class="dvsa-mts-dl dvsa-mts-dl--half">
          <dt class="dvsa-mts-dl__dt">
            Body type </dt>

          <dd class="dvsa-mts-dl__dd" id="bodyType">
            Motorcycle </dd>
          <dt class="dvsa-mts-dl__dt">
            Cylinder capacity </dt>

          <dd class="dvsa-mts-dl__dd" id="cylinderCapacity">
            125 </dd>
          <dt class="dvsa-mts-dl__dt">
            First used </dt>

          <dd class="dvsa-mts-dl__dd" id="firstUsed">
            6 June 2015 </dd>
        </dl>
      </div>
    </div>
  </div>


  <fieldset>
    <legend>
      <h3 class="heading-medium">
        Service brake control 1 </h3>
    </legend>

    <table class="table result" id="control-1-results">
      <thead>
        <tr>
          <th>Service brake item</th>
          <th>Result</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>Brake efficiency</td>
          <td>1%</td>
        </tr>
        <tr>
          <td>Brake lock</td>
          <td>1%</td>
        </tr>
      </tbody>
    </table>


    <div class="dvsa-notice dvsa-notice--success" id="control-1-result" role="alert" tabindex="-1">
      <p class="dvsa-notice__message">
        Service brake control 1 test
        <strong>pass</strong>
      </p>
    </div>

  </fieldset>
  <fieldset>
    <legend>
      <h3 class="heading-medium">
        Service brake control 2 </h3>
    </legend>

    <table class="table result" id="control-2-results">
      <thead>
        <tr>
          <th>Service brake item</th>
          <th>Result</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>Brake efficiency</td>
          <td>1%</td>
        </tr>
        <tr>
          <td>Brake lock</td>
          <td>1%</td>
        </tr>
      </tbody>
    </table>


    <div class="dvsa-notice dvsa-notice--success" id="control-2-result" role="alert" tabindex="-1">
      <p class="dvsa-notice__message">
        Service brake control 2 test
        <strong>pass</strong>
      </p>
    </div>

  </fieldset>
  <div class="message message--information">
    <p>
      Other brake performance related defects like 'grab' or 'judder' can be added as a
      <a href="#">Reason for Rejection</a>
    </p>
  </div>

  <div class="form-group">
    <a href="#" id="brake_test_summary_done" class="button">
      Done
    </a>
  </div>

  <p>
    <a href="#" id="addBrakeTestResults">Edit</a>
  </p>
  
{% endblock %}