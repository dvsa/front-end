{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Disciplinary notification' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'Notifications' }
] %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

      <header class="content-header">
        <h1>
          <span class="content-header__type">Events</span>
          <span class="content-header__title">Event details</span>
        </h1>
      </header>

      <div class='text u-clearfix'>


  <table class="table-summary" style="margin-bottom: 20px;">
  <tbody>
    <tr>
      <th class="table-summary__value" width="200">Event type</th>
      <td class="table-summary__value--tabular">
         <strong>Re-inspection</strong>
                  <a href="#" class="table-summary__action" title="">Edit</a>
      </td>
    </tr>  
    <tr>
      <th class="table-summary__value" width="200">Date</th>
      <td class="table-summary__value--tabular">
         <strong>11 March 2019</strong>
                  <a href="#" class="table-summary__action" title="">Edit</a>
      </td>
    </tr>    
    <tr>
      <th class="table-summary__value">Registration number</th>
      <td class="table-summary__value--tabular">
         <strong>FI18 JIU </strong>
                  <a href="#" class="table-summary__action" title="">Edit</a>
      </td>
    </tr>
    <tr>
      <th class="table-summary__value">Vehicle Examiner</th>
      <td class="table-summary__value--tabular">
         <strong>Rob Smith </strong>
                  <a href="#" class="table-summary__action" title="">Edit</a>
      </td>
    </tr>
    <tr>
      <th class="table-summary__value">VTS number</th>
      <td class="table-summary__value--tabular">
        <strong>VTS0071</strong>
                  <a href="#" class="table-summary__action" title="">Edit</a>
      </td>
    </tr>
    <tr>
      <th class="table-summary__value">VTS name</th>
      <td class="table-summary__value--tabular">
        <strong>Clutch&Bones Ltd.</strong> 
      </td>
    </tr>
    <tr>
      <th class="table-summary__value">Score</th>
      <td class="table-summary__value--tabular">
        <strong>30 points</strong>
                  <a href="#" class="table-summary__action" title="">Edit</a>
      </td>
    </tr>
    <tr>
      <th class="table-summary__value">Outcome</th>
      <td class="table-summary__value--tabular">
          <strong>Advisory Warning Letter</strong>
                  <a href="#" class="table-summary__action" title="">Edit</a>
      </td>
    </tr>
    <tr>
      <th class="table-summary__value">Missed defects</th>
      <td class="table-summary__value--tabular" style="padding-right: 0;">
          <table class="key-value-list" style="margin-top: 0; width: 100%" width="100%">
            <tr>
              <td class="table-summary__value--tabular" style="font-weight: bold; border-top: 0;">
                  Daytime running lamp obviously incorrectly positioned [<a href="#" title="Check defect categorisation">4.2.3 (a) (i)</a>]
                  <span class="key-value-list__meta" style="margin-bottom: 5px; color: black;">Nearside front</span>
                  <span class="badge--warn">Minor</span>
              </td>
              <td class="table-summary__value--tabular" style="border-top: 0;">
                  10 points
                  <a href="#" class="table-summary__action" title="">Edit</a>
              </td>
            </tr>
            <tr>
              <td class="table-summary__value--tabular" style="font-weight: bold; border-top: 0;">
                  Daytime running lamp obviously incorrectly positioned [<a href="#" title="Check defect categorisation">4.2.3 (a) (i)</a>]
                  <span class="key-value-list__meta" style="margin-bottom: 5px; color: black;">Nearside front</span>
                  <span class="badge--warn">Minor</span>
              </td>
              <td class="table-summary__value--tabular" style="border-top: 0;">
                  10 points
