                  Daytime running lamp obviously incorrectly positioned [<a href="#" title="Check defect categorisation">4.2.3 (a) (i)</a>]
                  <span class="key-value-list__meta" style="margin-bottom: 5px; color: black;">Nearside front</span>
                  <span class="badge--warn">Minor</span>
              </td>
              <td class="table-summary__value--tabular" style="border: 0;">
                  10 points
                  <a href="#" class="table-summary__action" title="">Edit</a>
              </td>
            </tr>

          </table>
          </td>
          </tr>
          </tbody>
          </table>

 
      </div>


      <div class="u-margin-top-10 u-margin-bottom-30">
        {{ components.button(text='Delete event', url='/prototypes/mts-messages/notifications-inbox-scheme-user-sn-acknowledged') }}
      </div>

      {{ components.link(text='Go back', url='/prototypes/mts-messages/notifications-inbox-scheme-user', paragraph=true) }}

    {%- endcall %}

  {%- endcall %}
  
{% endblock %}