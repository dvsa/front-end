{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Defect Categories' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'MOT test results', url: '/prototypes/mot-test' },
  { text: 'Defect Categories' }
] %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

      <header class="content-header">

        <h1><span class="content-header__title">Defect Categories</span></h1>

      </header>

      <header class='content-header'>

        <ul class='content-header__tertiary-list u-margin-bottom-35'>

          <li class='content-header__list-item--primary'>BHW, 790</li>

          <li class='content-header__list-item'>AJ30CTK</li>

          <li class='content-header__list-item'>First used 25 Apr 2005</li>

        </ul>

      </header>

      <div class="defect-summary">

        <div class="defect-summary__total defect-summary__total--eu">

          <h2 class="defect-summary__total-heading">Defects</h2>

          <ul>

            <li><span class="badge--alert">0</span> Failures</li>

            <li><span class="badge--warn">0</span> Minors</li>

            <li><span class="badge--info">0</span> PRS</li>

            <li><span class="badge">0</span> Advisories</li>

          </ul>

        </div>

      </div>

      <div class="search-bar__control-group u-margin-bottom-30">

        <input class="search-bar__search-input" type="search" placeholder="Search for a defect" title="Search" id="search-main" name="search">

        <input class="search-bar__search-submit" type="submit" value="Search">

      </div>

      <div class="browse u-margin-bottom-30">

        <div class="browse--two">

          <div class="browse__cats">

            <h3 class="browse__title hide-small">All categories</h3>

            <ul class="browse__list">

              <li><a href="/prototypes/mot-test/">Body, structure and general items</a></li>

              <li><a href="/prototypes/mot-test/" class="browse__slctd">Brakes</a></li>

              <li><a href="/prototypes/mot-test/">Steering</a></li>

              <li><a href="/prototypes/mot-test/">Suspension</a></li>

              <li><a href="/prototypes/mot-test/">Tyres</a></li>

              <li><a href="/prototypes/mot-test/">Road wheels</a></li>

              <li><a href="/prototypes/mot-test/">Seat belts and supplementary restraint systems</a></li>

              <li><a href="/prototypes/mot-test/">Lamps, reflectors and electrical equipment</a></li>

              <li><a href="/prototypes/mot-test/">Exhaust, fuel and emissions</a></li>

              <li><a href="/prototypes/mot-test/">Driving controls and speed limiters</a></li>

              <li><a href="/prototypes/mot-test/">Registration plates and VIN</a></li>

              <li><a href="/prototypes/mot-test/">Drivers view of the road</a></li>

              <li><a href="/prototypes/mot-test/">Items not tested</a></li>

              <li><a href="/prototypes/mot-test/">Motor tricycles and quadricycles</a></li>

              <li><a href="/prototypes/mot-test/">Non-component advisories</a></li>

            </ul>

          </div>

          <div class="browse__cats--sub">

            <h3 class="browse__title hide-small">Brakes</h3>

            <ul class="browse__list">

              <li><a href="/prototypes/mot-test/">Electronic stability system</a></li>

              <li><a href="/prototypes/mot-test/">Electronic braking system</a></li>

              <li><a href="/prototypes/mot-test/">Additional braking devices</a></li>

              <li><a href="/prototypes/mot-test/">Parking brake</a></li>

              <li><a href="/prototypes/mot-test/">Hand operated control valves</a></li>

              <li><a href="/prototypes/mot-test/">Service brake control components</a></li>

              <li><a href="/prototypes/mot-test/">Mechanical components</a></li>

              <li><a href="/prototypes/mot-test/">Full power hydraulic systems</a></li>

              <li><a href="/prototypes/mot-test/">Hydraulic systems</a></li>

              <li><a href="/prototypes/mot-test/">Air and vacuum systems</a></li>

              <li><a href="/prototypes/mot-test/">Abs</a></li>

              <li><a href="/prototypes/mot-test/">Hub components</a></li>

              <li><a href="/prototypes/mot-test/">Locking devices</a></li>

              <li><a href="/prototypes/mot-test/">Restricted movement</a></li>

              <li><a href="/prototypes/mot-test/">Prescribed areas</a></li>

              <li><a href="/prototypes/mot-test/">Brake performance</a></li>

            </ul>

          </div>
          
        </div>

      </div>

      <div class="panel panel-border-wide u-margin-bottom-30">

        <p>

          <a href="/prototypes/mot-test/">Add a manual advisory</a> - only do this if you have searhced for a defect and can't find a match.

        </p>

      </div>

      {{ components.button(text='Finish and return to MOT test results', url='/prototypes/mot-test') }}

    {%- endcall %}

  {%- endcall %}
  
{% endblock %}