{% if viewData.errors.length > 0 %}

  <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">

    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">There was some errors with the form</h2>

    <ul class="error-summary-list">

      {% for error in viewData.errors %}

      <li>

        <a href="#file-upload">{{ error }}</a>

      </li>

      {% endfor %}

    </ul>

  </div>

{% endif %}