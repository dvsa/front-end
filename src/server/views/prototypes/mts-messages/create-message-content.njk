{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Create a notification' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'Notifications', url: '/prototypes/mts-messages/notifications-inbox-scheme-user' },
  { text: 'Create a notification'}
] %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

      {{ components.pageHeading(heading='Notification details', secondary='Create a notification') }}

      <div class='u-clearfix'>
        
        <form action="/prototypes/site-review/enter-details" method="POST">

          <div class="form-group">
            <fieldset>
              <legend class="form-label">Internal publish date <span class="form-hint">For example, 31 3 1980</span></legend>
              <div class="form-date">
                <div class="form-group form-group-day">
                  <label class="" for="date1-day" id="form-group-dayDay">Day <span class="validation-message"></span></label>
                  <input class="form-control" id="date1-day" maxlength="2" name="testDay" title="" max="31" min="01" type="text" value="{{ viewData.testerDetails.testDay }}">
                </div>
                <div class="form-group form-group-month">
                  <label class="" for="date1-month" id="form-group-monthMonth">Month <span class="validation-message"></span></label>
                  <input class="form-control" id="date1-month" maxlength="2" max="" min="" name="testMonth"  title="" type="text" value="{{ viewData.testerDetails.testMonth }}">
                </div>
                <div class="form-group form-group-year">
                  <label class="" for="date1-year" id="form-group-yearYear">Year <span class="validation-message"></span></label>
                  <input class="form-control" id="date1-year" maxlength="4" name="testYear" title="" type="text" pattern="[0-9]*" value="{{ viewData.testerDetails.testYear }}">
                </div>
              </div>
            </fieldset>
          </div>

          <div class="form-group">
            <fieldset>
              <legend class="form-label">External publish date <span class="form-hint">For example, 31 3 1980</span></legend>
              <div class="form-date">
                <div class="form-group form-group-day">
                  <label class="" for="date1-day" id="form-group-dayDay">Day <span class="validation-message"></span></label>
                  <input class="form-control" id="date1-day" maxlength="2" name="testDay" title="" max="31" min="01" type="text" value="{{ viewData.testerDetails.testDay }}">
                </div>
                <div class="form-group form-group-month">
                  <label class="" for="date1-month" id="form-group-monthMonth">Month <span class="validation-message"></span></label>
                  <input class="form-control" id="date1-month" maxlength="2" max="" min="" name="testMonth"  title="" type="text" value="{{ viewData.testerDetails.testMonth }}">
                </div>
                <div class="form-group form-group-year">
                  <label class="" for="date1-year" id="form-group-yearYear">Year <span class="validation-message"></span></label>
                  <input class="form-control" id="date1-year" maxlength="4" name="testYear" title="" type="text" pattern="[0-9]*" value="{{ viewData.testerDetails.testYear }}">
                </div>
              </div>
            </fieldset>
          </div>

          <div class="form-group">
            <fieldset>
              <label class="form-label" for="acknowledgment-period">
                Acknowledgment period
                <span class="form-hint">For example, 31 3 1980</span>
              </label>
              <input class="form-control form-control-1-8" id="first-name" type="text" name="first-name" value="">
            </fieldset>
          </div>

          <div class="form-group">
            <fieldset>
              <label class="form-label" for="acknowledgment-period">
                Message title
              </label>
              <input class="form-control" id="first-name" type="text" name="first-name" value="">
            </fieldset>
          </div>

          <div class="form-group">
            <fieldset>
              <label class="form-label" for="textarea">
                Message content
              </label>
              <textarea class="form-control" style="width: 100%;" name="textarea" id="textarea" rows="15"></textarea>
            </fieldset>
          </div>

          <details>
            <summary><span class="summary">Help with formatting the special notice</span></summary>
            <div class="panel panel-border-narrow">
              <table class="table" style="font-size: 0.8em">
                <thead>
                <tr>
                    <th scope="col">Use this</th>
                    <th scope="col">To get this effect</th>
                </tr>
                </thead>
                <tbody id="markdown-guide">
                    <tr><td><kbd>*italic*</kbd></td><td><em>Italic</em></td></tr>
                    <tr><td><kbd>**bold**</kbd></td><td><strong>bold</strong></td></tr>
                    <tr><td><kbd>***bold-italic***</kbd></td><td><strong><em>bold-italic</em></strong></td></tr>
                    <tr><td><kbd>#Large header</kbd></td><td><h1>Large header</h1></td></tr>
                    <tr><td><kbd>##Medium header</kbd></td><td><h2>Medium header</h2></td></tr>
                    <tr><td><kbd>###Small header</kbd></td><td><h3>small header</h3></td></tr>
                    <tr><td>Press the space bar twice, then press enter</td><td>Start a new line</td></tr>
                    <tr><td>Press enter twice</td><td>Start a new paragraph</td></tr>
                    <tr><td><kbd>[google](http://google.co.uk)</kbd></td><td><a href="http://google.co.uk">google</a></td></tr>
                <tr>
                    <td>
                        <kbd>
                        - car <br>
                        - HGV <br>
                        - motorcycle
                        </kbd>
                    </td>
                    <td>
                        <ul>
                            <li>car</li>
                            <li>HGV</li>
                            <li>motorcycle</li>
                        </ul>
                    </td>
                </tr>
                    <tr>
                        <td>
                            <kbd>
                                1. Odometer reading <br>
                                2. Brake test results <br>
                                3. Reasons for rejection
                            </kbd>
                        </td>
                        <td>
                            <ol>
                                <li>Odometer reading</li>
                                <li>Brake test results</li>
                                <li>Reasons for rejection</li>
                            </ol>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Press the space bar four times before a bullet/list item <br>
                            <kbd>
                                1. Odometer reading <br>
                                &nbsp; 1. There is no odometer<br>
                                2. Brake test results
                            </kbd>
                        </td>
                        <td>
                            Indented bullets<br>
                            <ol>
                                <li>Odometer reading</li>
                                <ol><li>There is no odometer</li></ol>
                                <li>Brake test results</li>
                            </ol>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
          </details>

        </div>

        <div class="u-margin-top-10 u-margin-bottom-30">
          {{ components.button(text='Review notification and save as draft', url='/prototypes/mts-messages/create-message-review') }}
        </div>

        {{ components.link(text='Cancel and return to home', url='/prototypes/mts-messages', paragraph=true) }}
       
      </form>

      </div>

    {%- endcall %}

  {%- endcall %}
  
{% endblock %}