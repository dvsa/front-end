{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Create a notification' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'Messages', url: '/prototypes/mts-messages/notifications-inbox-scheme-user' },
  { text: 'Remove message'}
] %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

      {{ components.pageHeading(heading='Delete message', secondary='Messages') }}

      <div class='text u-clearfix'>

        {{ components.paragraph(text='Confirm that you want to delete <strong>MOT special notice 05-18: Preparation for the EU roadworthiness directive</stong>', lead=true) }}

        <p>Deteting a message will remove it from all users.</p>

        <div class="u-margin-top-10 u-margin-bottom-30">
          <a class="button button--alert" href="/prototypes/mts-messages/scheme/remove-message-confirmation">Delete message</a>
        </div>

        {{ components.link(text='Cancel and return to messages', url='/prototypes/mts-messages/notifications-inbox-scheme-user', paragraph=true) }}

      </div>

    {%- endcall %}

  {%- endcall %}
  
{% endblock %}