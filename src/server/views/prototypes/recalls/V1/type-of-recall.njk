{% extends 'layouts/mts-without-container.layout.njk' %}
 {% set pageTitle = 'homepage' %}
 {% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'MOT test results', url: '/prototypes/mot-test' },
  { text: 'Brake test' }
] %}
 {% block content %}
 <main id="content">
     <a href="/prototypes/recalls/V1/start-page" class="link-back">Back</a> 
     <header class="content-header">
        <h1 class="heading-large heading heading--page-heading heading--small-margin-bottom">
                What type of recall information are you looking for?</h1>
    </header>                       
     <div class="row contents">
        <div class="col-lg-12">
     <div class="grid-row">
    <div class="column-three-quarters">
        <form method="POST" action="/prototypes/recalls/V1/type-of-recall">
            <div class="form-group">
                <fieldset>
                 <div class="multiple-choice">
                    
                    <input id="recalls-vehicle" type="radio" name="radio-recalls-group" value="vehicle">
                    <label for="recalls-vehicle">Vehicle saftey recalls</label>
                </div>
                <div class="multiple-choice">
                    <input id="recalls-other" type="radio" name="radio-recalls-group" value="other">
                    <label for="recalls-other">Other recalled equipment<span class="form-hint">For example, airbags or brakes</span></label>
                </div>
                </fieldset>
            </div>
          <input class="button" type="submit" value="Continue">
        </form>
    </div>
</div>  
           
 </main>
 {% endblock %} 