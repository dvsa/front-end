{% block content %}

  {{ components.link(text='Back', url='/prototypes/report-fraud/', back=true) }}

  {% call components.gridRow() %}

    {% call components.columnFull() %}
      
      {{ components.pageHeading(heading='Report MOT fraud') }}

      {% call components.form(action='/prototypes/report-fraud/report-haserrors', method='GET') %}
        
        {{ components.field(label='Name of the garage or person involved', labelBold=true, id='garageOrPersonName', group=true) }}

