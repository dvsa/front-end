{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Enter details of the site review' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'Willetta Aredondo', url: '/' },
  { text: 'VTS079774', url: '/' },
  { text: 'Site review' }
] %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

      {{ components.pageHeading(heading='Enter details', secondary='Site review') }}

      {% call components.form(action='/prototypes/site-review/enter-details', method='POST') %}

        <div class="form-group">

          <fieldset>
            
            <legend class="form-label">Date of site visit

              <span class="form-hint">For example, 31 3 1980</span>

            </legend>

            <div class="form-date">

              <div class="form-group form-group-day">

                <label for="date1-day" id="form-group-dayDay">Day <span class="validation-message"></span></label>

                <input class="form-control" id="date1-day" maxlength="2" name="testDay" title="" max="31" min="01" type="text" value="{{ viewData.testerDetails.testDay }}">

              </div>

              <div class="form-group form-group-month">

                <label for="date1-month" id="form-group-monthMonth">Month <span class="validation-message"></span></label>

                <input class="form-control" id="date1-month" maxlength="2" max="" min="" name="testMonth"  title="" type="text" value="{{ viewData.testerDetails.testMonth }}">

              </div>

              <div class="form-group form-group-year">

                <label for="date1-year" id="form-group-yearYear">Year <span class="validation-message"></span></label>

                <input class="form-control" id="date1-year" maxlength="4" name="testYear" title="" type="text" pattern="[0-9]*" value="{{ viewData.testerDetails.testYear }}">

              </div>
              
            </div>

          </fieldset>

        </div>

        <fieldset>

          <legend class="sr-only">AE Details</legend>

          <div class="form-group">

            <label class="form-label" for="ae-representatives-user-id">AE representative's User ID</label>

            <input class="form-control form-control-1-8" id="ae-representatives-user-id" maxlength="50" name="testerRepId" type="text" value="{{ viewData.testerDetails.testerRepId }}">

          </div>

          <div class="form-group">

            <label class="form-label" for="ae-representatives-full-name">AE representative's full name (if AE User ID not entered)</label>

            <input class="form-control" id="ae-representatives-full-name" maxlength="100" name="testerName" type="text" value="{{ viewData.testerDetails.testerName }}">

          </div>

          <div class="form-group">

            <label class="form-label" for="ae-representatives-role">AE representative's role</label>

            <input class="form-control" id="ae-representatives-role" maxlength="100" name="testerRole" type="text" value="{{ viewData.testerDetails.testerRole }}">

          </div>

        </fieldset> 

        <div class="u-margin-bottom-20">

          <input class="button" type="submit" value="Save and continue">

        </div>  

        <a href="/prototypes/site-review/v4">Back</a>

      {% endcall %}

    {% endcall %}

  {% endcall %}

{% endblock %}
