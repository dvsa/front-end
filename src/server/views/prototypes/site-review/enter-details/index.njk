{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Enter details of the site review' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'Willetta Aredondo', url: '/' },
  { text: 'VTS079774', url: '/' },
  { text: 'Site review' }
] %}

{% block content %}

{{ viewData.testerName }} 

<form action="/prototypes/site-review/enter-details" method="POST">
  <div class="form-group">
    
    <fieldset>
      <legend>
        <h1 class="heading-medium">
          Enter details of the site review
        </h1>
    </legend>


    <div class="form-group">
      <fieldset>
          <legend class="form-label">Date of site visit <span class="form-hint">For example, 31 3 1980</span></legend>
          <div class="form-date">
            <div class="form-group form-group-day">
              <label class="" for="date1-day" id="form-group-dayDay">Day <span class="validation-message"></span></label>
              <input class="form-control" id="date1-day" maxlength="2" name="testDay"  title="" max="31" min="01" type="number" value="{{ viewData.testerDetails.testDay }}">
            </div>
            <div class="form-group form-group-month">
              <label class="" for="date1-month" id="form-group-monthMonth">Month <span class="validation-message"></span></label>
              <input class="form-control" id="date1-month" maxlength="2" max="12" min="1" name="testMonth"  title="" type="number" value="{{ viewData.testerDetails.testMonth }}">
            </div>
            <div class="form-group form-group-year">
              <label class="" for="date1-year" id="form-group-yearYear">Year <span class="validation-message"></span></label>
              <input class="form-control" id="date1-year" maxlength="4" name="testYear" title="" type="number" pattern="[0-9]*" value="{{ viewData.testerDetails.testYear }}">
            </div>
          </div>
        </fieldset>
      </div>
 

    <div class="form-group {{ 'form-group-error' if viewData.compliance.errors[0]['radioGroup'] }}">

    <fieldset>
      <legend>
        <span class='form-label-bold'>Was the site review conducted by two DVSA examiners?</span>
        {% if viewData.compliance.errors[0]['radioGroup'] %}
          <span class="error-message">{{viewData.compliance.errors[0]['radioGroup']}}</span>
        {% endif %}
      </legend>


      <div class="multiple-choice" data-target="yes-panel">
        <input id="twoExaminers-no" type="radio" name="twoExaminers" value="no" {{ "checked" if (viewData.testerDetails.twoExaminers === 'no') else "checked='false'"  }}>
        <label for="twoExaminers-no">No</label>
      </div>

      <div class="multiple-choice" data-target="no-panel">
        <input id="twoExaminers-yes" type="radio" name="twoExaminers" value="yes" {{"checked" if (viewData.testerDetails.twoExaminers === 'yes')}}>
        <label for="twoExaminers-yes">Yes</label>
      </div>
      <div class="js-hidden" id="no-panel">
        <div class="panel panel-border-narrow">
          {% if viewData.compliance.errors[0]['textareaImprove'] %}
          <span class="error-message">{{ viewData.compliance.errors[0]['textareaImprove'] }}</span>
          {% endif %}
         <div class="{{ 'form-group-error' if viewData.compliance.errors[0]['textareaImprove'] }}">
          <label class="form-label" for="examiner-user-id">Examiner's User ID</label>
          <input class="form-control form-control-1-8" id="examiner-user-id" maxlength="50" name="examinerId" type="text" value="{{ viewData.testerDetails.examinerId }}">
        </div>
        </div> 
      </div> 
      
    </fieldset>
  </div>
    
    <fieldset>
      <div class="form-group">
        <label class="form-label" for="ae-representatives-user-id">AE representative's User ID</label>
        <input class="form-control form-control-1-8" id="ae-representatives-user-id" maxlength="50" name="testerRepId" type="text" value="{{ viewData.testerDetails.testerRepId }}">
      </div>
    </fieldset>
   

    <fieldset>
      <div class="form-group">
        <label class="form-label" for="ae-representatives-full-name">AE representative's full name (if AE User ID not entered)</label>
        <input class="form-control" id="ae-representatives-full-name" maxlength="100" name="testerName" type="text" value="{{ viewData.testerDetails.testerName }}">
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group">
        <label class="form-label" for="ae-representatives-role">AE representative's role</label>
        <input class="form-control" id="ae-representatives-role" maxlength="100" name="testerRole" type="text" value="{{ viewData.testerDetails.testerRole }}">
      </div>
    </fieldset> 


    </div>

  </div>

  <div class="form-group u-margin-bottom-20">
    <input class="button" type="submit" value="Save and continue">
  </div>  
  <div class="form-group">
      <a href="./choose-section">Back</a>
  </div>  
 
</form>
{% endblock %}
