{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Site review summary' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'Willetta Aredondo', url: '/' },
  { text: 'VTS079774', url: '/' },
  { text: 'Site review', url: '/prototypes/site-review' },
  { text: 'Enter details', url: '/prototypes/site-review/enter-details' },
  { text: 'Summary' }
] %}

{% block content %} 


{% set notGiven = "Not given" %}
 
<form action="enter-event-details-step-1">
  <div class="form-group">

      <legend>
        <h1 class="heading-medium">
          Check details of the site review before you save
        </h1>
      </legend>

  </div>

  <table class="table-summary" style="margin-bottom: 20px;">
  <tbody>
    <tr>
      <th class="table-summary__key">
        Compliance
      </th>
      <td class="table-summary__value--tabular">
         <strong>{{ viewData.outcomes.compliance.outcome }}</strong><br/>
        Advice given: {{ viewData.outcomes.compliance.advice }}
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        Premises
      </th>
      <td class="table-summary__value--tabular">
        <strong> {{ viewData.outcomes.premises.outcome }}</strong><br/>
        Advice given: {{ viewData.outcomes.premises.advice }}
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        Management and quality
      </th>
      <td class="table-summary__value--tabular">
        <strong>{{ viewData.outcomes.management.outcome }}</strong><br/>
        Advice given: {{ viewData.outcomes.management.advice }}
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        People
      </th>
      <td class="table-summary__value--tabular">
        <strong>{{ viewData.outcomes.people.outcome }}</strong><br/>
        Advice given: {{ viewData.outcomes.people.advice }}
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        Activity
      </th>
      <td class="table-summary__value--tabular">
        <strong>{{ viewData.outcomes.activity.outcome }}</strong><br/>
        MOT test number: <strong>{{ viewData.outcomes.activity.detail }}</strong>
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        AE representative's User ID
      </th>
      <td class="table-summary__value--tabular">
       <strong>{{  formDetails.notGiven }}</strong><br/>
       <strong>{{ viewData['ae-representatives-user-id'] }}</strong><br/>
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        AE representative's full name
      </th>
      <td class="table-summary__value--tabular"> 
        <strong>{{ viewData["ae-representatives-full-name"] }}</strong><br/>
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        AE representative's role
      </th>
      <td class="table-summary__value--tabular"> 
        <strong>{{ viewData["ae-representatives-role"] }} </strong><br/>
      </td>
    </tr>
    <tr>
      <th class="table-summary__key">
        Date of site visit
      </th>
      <td class="table-summary__value--tabular">
        <strong>{{ viewData.dobDay }} {{ viewData.dobMonth }} {{ viewData.dobYear }}</strong>
      </td>
    </tr>
  </tbody>
</table>

<div class="form-group u-margin-bottom-20">
  <input class="button" type="submit" value="Save and continue"> 
</div>

<div class="form-group"> 
    <a href="choose-section">Cancel</a>
</div>
  

  <div>
  </div>



</form>
{% endblock %}
