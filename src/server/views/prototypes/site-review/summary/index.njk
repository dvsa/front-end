{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Site review summary' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'WILLETTA AREDONDO', url: '/prototypes' },
  { text: 'DILENA GROUP', url: '/prototypes' },
  { text: 'Check details' }
] %}

{% set activityPerformed = viewData.activity.activityPerformed %} 

{% block content %} 

  {% set notGiven = "Not given" %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

      {{ components.pageHeading(heading='Check details', secondary='Site review') }}

        <table class="table-summary u-margin-bottom-30">

          <tbody>

            <tr>

              <th class="table-summary__key">Compliance</th>

              <td class="table-summary__value--tabular">

                <strong>{{ viewData.compliance.commitedLevel }}</strong>
                
                <br/>

                {% if viewData.compliance.commitedComment %} 

                {{"Comment" if viewData.compliance.satisfactory.isChecked else "Advice given"}}:

                {{viewData.compliance.commitedComment}}

                {% endif %}   

                <a href="/prototypes/site-review/assessment/compliance" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

              </td>

            </tr>

            <tr>

            <th class="table-summary__key">Premises</th>

            <td class="table-summary__value--tabular">

              <strong>{{ viewData.premises.commitedLevel }}</strong>
              
              <br/>

              {% if viewData.premises.commitedComment %} 

              {{"Comment" if viewData.premises.satisfactory.isChecked else "Advice given"}}: 

              {{viewData.premises.commitedComment}}

              {% endif %}

              <a href="/prototypes/site-review/assessment/premises" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

            </td>

            </tr>

            <tr>

              <th class="table-summary__key">Management and quality</th>

              <td class="table-summary__value--tabular">

              <strong>{{ viewData['management-and-quality'].commitedLevel }}</strong><br/>

              {% if viewData['management-and-quality'].commitedComment %} 

              {{"Comment" if viewData['management-and-quality'].satisfactory.isChecked else "Advice given"}}:

              {{viewData['management-and-quality'].commitedComment}}

              {% endif %}

              <a href="/prototypes/site-review/assessment/management-and-quality" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

              </td>

            </tr>

            <tr>

              <th class="table-summary__key">People</th>

              <td class="table-summary__value--tabular">

              <strong>{{ viewData.people.commitedLevel }}</strong><br/>

              {% if viewData.people.commitedComment %} 

              {{"Comment" if viewData.people.satisfactory.isChecked else "Advice given"}}: 

              {{viewData.people.commitedComment}}

              {% endif %} 

              <a href="/prototypes/site-review/assessment/people" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a> 

              </td>

            </tr>

            <tr>

              <th class="table-summary__key">Activity</th>

              <td class="table-summary__value--tabular">

              <strong>

              {% if (viewData.activity.commitedTestNum) %}

              Activity performed

              {% else %}

              No activity performed

              {% endif %} 

              </strong><br/>

              {% if (viewData.activity.commitedTestNum) %}

              MOT test number: <strong>{{viewData.activity.commitedTestNum }}</strong><br />

              {% elif viewData.activity.commitedOtherReason %}

              Comment: {{viewData.activity.commitedOtherReason}}

              {% endif %}

              <a href="/prototypes/site-review/assessment/activity" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

              </td>

            </tr>

            <tr>

              <th class="table-summary__key">Examiner's User ID</th>

              <td class="table-summary__value--tabular">

              <strong>DREW666</strong><br/>

              </td>

            </tr>

            <tr>

              <th class="table-summary__key">AE representative's User ID</th>

              <td class="table-summary__value--tabular">

              <strong>{{ viewData.testerDetails.testerRepId }}</strong><br/>

              <a href="/prototypes/site-review/enter-details" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

              </td>

            </tr>

            <tr>

              <th class="table-summary__key">AE representative's full name</th>

              <td class="table-summary__value--tabular"> 

              <strong>{{  viewData.testerDetails.testerName }}</strong><br/>

              <a href="/prototypes/site-review/enter-details" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

              </td>

            </tr>

            <tr>

              <th class="table-summary__key">AE representative's role</th>

              <td class="table-summary__value--tabular"> 
                
              <strong>{{  viewData.testerDetails.testerRole }}</strong><br/>

              <a href="/prototypes/site-review/enter-details" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

              </td>

            </tr>

            <tr>

              <th class="table-summary__key">Date of site visit</th>

              <td class="table-summary__value--tabular">

              <strong>{{ viewData.testerDetails.date }}</strong>

              <a href="/prototypes/site-review/enter-details" class="table-summary__action" title="Change Numeric data">Change<span class="visuallyhidden"> Numeric data</span></a>

              </td>

            </tr>

          </tbody>

        </table>

        <div class="u-margin-bottom-20">

          <a href="/prototypes/site-review/saved" class="button">Save and confirm</a> 

        </div> 

        <a href="/prototypes/site-review/choose-section">Back</a>

    {% endcall %}

  {% endcall %}

{% endblock %}
