<form action="choose-section-premises-done">

 <h1 class="heading-medium">
      Activity 
  </h1>


  <div class="form-group">
    <fieldset>
      <legend>
        <span class="form-label-bold">
          Did you perform an activity?
        </span>
    </legend>

          <div class="multiple-choice" data-target="advice-given-panel">
            <input id="example-multiple-yes" type="radio" name="radio-two-targets-group" value="yes">
            <label for="example-multiple-yes">
              Yes
            </label>
          </div>

                <div class="panel panel-border-narrow js-hidden" id="advice-given-panel">
                    <label class="form-label" for="test-number">
                      Test number of the MOT test you perfomed activity against
                    </label>
                    <input class="form-control" id="test-number" type="text" name="test-number" value="">
                </div>

          <div class="multiple-choice" data-target="activity-blocked-panel">
            <input id="example-multiple-no" type="radio" name="radio-two-targets-group" value="no">
            <label for="example-multiple-no">
              No
            </label>
          </div>

          <div class="panel panel-border-narrow js-hidden" id="activity-blocked-panel">
              <div class="form-group">
                <label class="form-label" for="reinspection-options">
                  Why activity was not performed?
                </label>
                <select class="form-control" id="reinspection-options" name="reinspection-options">
                  <option>Please select</option>
                  <option value="one">It wasn't necessary</option>
                  <option value="two">Blocked by pseudo customer</option>
                  <option value="two">Blocked by vehicle owner</option>
                  <option value="two">I felt under threat from the garage staff</option>
                  <option value="etc">etc</option>
                </select>
              </div>
          </div>




        </div>
        </fieldset>




  </div>

  <div>
      <input class="button" type="submit" value="Save and continue"><br /> <br />
      <a href="choose-section">Cancel</a>
  </div>



</form>
