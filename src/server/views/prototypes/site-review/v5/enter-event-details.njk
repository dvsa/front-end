{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Event summary' %}

{% block content %}

  <div class="form-group">

      <div class="breadcrumbs">
        <ol>
          <li>
            <a href="/manuals">
              Home
            </a>
          </li>
          <li>
            <a href="/">
              WILLETTA AREDONDO
            </a>
          </li>
          <li>
            <a href="/prototypes/site-review/v5/VE-view-VTS-overview">
              DILENA GROUP
            </a>
          </li>
          <li>
            Record an event outcome
          </li>
        </ol>
      </div>

      


      <div class="container">


         <header class="content-header">
            <h1>
              <span class="content-header__type">Create event</span>
              <span class="content-header__title">Record an event outcome</span>
            </h1>
          </header>

        <div class="row contents">
        <div class="col-lg-12">



      <form action="summary">
          <fieldset>
              <legend class="form-title heading-large visuallyhidden">Outcome of the event</legend>

              <div class="form-group">
                  <label for="selectStandard" class="form-label">
                      Event outcome
                                  </label>
                  <select name="outcomeCode" id="outcomeCode" class="form-control">
                      <option value="">Please select</option>
                      <option value="AWL">Advisory Warning Letter (AWL)</option><option value="DAR">Disciplinary Action Report (DAR)</option><option value="NFA">No further action</option>            </select>
              </div>

              <div class="form-group ">
                  <label for="textareaStandard" class="form-label">
                      Notes (optional)
                      <span class="form-hint">Please enter any supporting information below</span>
                  </label>
                      <textarea type="text" name="notes" id="notes" class="form-control form-control--flex-v"></textarea>
              </div>

          </fieldset>


          <nav class="content-navigation">

              <input type="submit" value="Continue" id="continue" class="button">

              <ul class="content-navigation__secondary">
                  <li>
                      <a href="#" id="back">Back</a>
                  </li>
              </ul>

          </nav>

      </form>                    </div>
                      </div>
              </div>


  </div>



</form>
{% endblock %}
