{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Testing advice for this vehicle' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'MOT testing', url: '/prototypes/vsi-during-test' },
  { text: 'Testing advice for this vehicle'}
] %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

    {{ components.dvsaBanner(type='confirmation', secondaryText='MOT test started for <strong>Peugeot 3008 SUV</strong> on <strong>14th September 2018, 9:30am</strong>') }}

    {{ components.pageHeading(heading='MOT Inspection') }}

    <h2 class="heading heading--medium heading-medium">Testing advice</h2>

    <a href="/prototypes/vsi-during-test/advice">View testing advice</a>

    <h2 class="heading heading--medium heading-medium">Vehicle inspection</h2>

    <table class="task-list u-margin-top-5">
      <tbody>
        <tr>
          <th class="task-list__cell">
            <a href="#">Interior Checks</a>
          </th>
          <td class="task-list__cell">
            <span class="task-list__badge">Advice</span>
            <span class="task-list__badge task-list__badge--alert u-float-right">FAILURE</span>
          </td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="/prototypes/vsi-during-test/front-exterior-checks/front-exterior-checks-1">Front Exterior Checks</a>
          </th>
          <td class="task-list__cell"></td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="#">OS Exterior Checks</a>
          </th>
          <td class="task-list__cell"></td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="#">Rear Exterior Checks</a>
          </th>
          <td class="task-list__cell"></td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="#">NS Exterior Checks</a>
          </th>
          <td class="task-list__cell"></td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="#">Under Bonnet checks</a>
          </th>
          <td class="task-list__cell">
            <span class="task-list__badge">Advice</span>
          </td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="#">Front Under Vehicle checks</a>
          </th>
          <td class="task-list__cell"></td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="#">Rear Under Vehicle checks</a>
          </th>
          <td class="task-list__cell"></td>
        </tr>
        <tr>
          <th class="task-list__cell">
            <a href="#">Emissions checks</a>
          </th>
          <td class="task-list__cell"></td>
        </tr>
      </tbody>
    </table>

    <h2 class="heading heading--medium heading-medium">Odometer</h2>

    <table class="task-list u-margin-top-5">
      <tbody>
        <tr>
          <th class="task-list__cell">
            <a href="../odometer">Add reading</a>
          </th>
          <td class="task-list__cell">
            <span class="u-float-right">Not recorded</span>
          </td>
        </tr>
      </tbody>
    </table>

    <h2 class="heading heading--medium heading-medium">Brake test</h2>

    <table class="task-list u-margin-top-5 u-margin-bottom-45">
      <tbody>
        <tr>
          <th class="task-list__cell">
            <a href="#">Add reading</a>
          </th>
          <td class="task-list__cell">
            <span class="task-list__badge">Advice</span>
            <span class="u-float-right">Not recorded</span>
          </td>
        </tr>
      </tbody>
    </table>

    <form class="content-navigation" action="/prototypes/vsi-during-text/interior-checks/interior-checks-1" method="get" data-form-state-index="0">
      <div class="content-navigation__split">
        <div class="content-navigation__split--left u-float-left">
          <input id="reviewTest" type="submit" class="button" value="Review test" disabled="disabled">
        </div>
        <div class="content-navigation__split--right u-float-right">
          <a class="button button--alert" id="refuse-to-test" href="/prototypes">Cancel test</a>
        </div>
      </div>
    </form>

    {% endcall %}

  {% endcall %}

{% endblock %}
