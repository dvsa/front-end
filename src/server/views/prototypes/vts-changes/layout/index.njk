{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Notify of changes to equipment - VTS079774' %}
 

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/manuals' },
  { text: 'WILLETTA AREDONDO', url: '/prototypes/mot-test' },
  { text: 'VTS079774', url: '/prototypes/vts-changes' },
  { text: 'Notify of changes to equipment'  }
] %}

{% block content %}


  {% call components.form(action='/prototypes/vts-changes/layout', method='POST') %} 
  <h1 class="heading-large ">
        <span class="heading-secondary">Notify of changes to equipment</span>
        <label for="radio-inline-group">
          Will the new equipment change the layout of the premises?
        </label>
  </h1> 

  <div class="form-group {{ 'form-group-error' if viewData.questions.layout.errors[0]['error'] }}">
    {% if viewData.questions.layout.errors[0]['error'] %}
      <span class="error-message">{{ viewData.questions.layout.errors[0]['error'] }}</span>
    {% endif %}
  
    <fieldset class="inline u-margin-top-15">
      <div class="multiple-choice">
        <input id="radio-inline-1" type="radio" name="layout" value="yes" {{ 'checked' if viewData.questions.layout.answer['layout'] == 'yes' }}>
        <label for="radio-inline-1">Yes</label>
      </div>
      <div class="multiple-choice">
        <input id="radio-inline-2" type="radio" name="layout" value="no" {{ 'checked' if viewData.questions.layout.answer['layout'] == 'no' }}>
        <label for="radio-inline-2">No</label>
      </div>
    </fieldset>
  </div>
 
  <div class="form-group u-margin-bottom-15">
    <details>
      <summary><span class="summary">Help on changes to layout of the premises</span></summary>
      <div class="panel panel-border-narrow">
        <p>The proposed change will not be acceptable if it reduces clearances or dimensions (including those for access) below the limits specified in the Requirements for Authorisation.</p>
        <p>For features currently approved only as `acceptable variations', proposed changes will not be acceptable below their existing values. </p>
      </div>
    </details>
  </div>
  
 

  <div class="u-margin-bottom-15">
    <input type="submit" value="Continue" class="button"/> 
  </div>
  <div class="u-margin-bottom-10">
    <a href="/prototypes/vts-changes/changes-03-approved">Back</a>
  </div>

  {% endcall %}

  {% endblock %}
   
