{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Enter site review details' %}

{% block content %}

<div class="breadcrumbs">
  <ol>
    <li>
      <a href="/manuals">
        Home
      </a>
    </li>
    <li>
      <a href="/">
        WILLETTA AREDONDO
      </a>
    </li>
    <li>
      <a href="/">
          VTS079774
      </a>
    </li>
    <li>
      Site review
    </li>
  </ol>
</div>

<form action="site-review-summary">
  <div class="form-group">
    <fieldset>
      <legend>
        <h1 class="heading-medium">
          Enter details of the site review
        </h1>
    </legend>


      <div class="form-group">
        <fieldset class="inline">
          <legend>
              Did someone other than you complete the site assessment?
          </legend>
          <div class="multiple-choice">
            <input id="radio-inline-1" type="radio" name="radio-inline-group" value="No" checked="checked">
            <label for="radio-inline-1">No</label>
          </div>
          <div class="multiple-choice">
            <input id="radio-inline-2" type="radio" name="radio-inline-group" value="Yes">
            <label for="radio-inline-2">Yes</label>
          </div>
        </fieldset>
      </div>


        <fieldset>
      <div class="form-group">
        <label class="form-label" for="ae-representatives-user-id">AE representative's User ID</label> <input class="form-control form-control-1-8" id="ae-representatives-user-id" maxlength="50" name="ae-representatives-user-id" type="text" value="">
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group">
        <label class="form-label" for="ae-representatives-full-name">AE representative's full name (if AE user ID not entered)</label> <input class="form-control" id="ae-representatives-full-name" maxlength="100" name="ae-representatives-full-name" type="text" value="">
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group">
        <label class="form-label" for="ae-representatives-role">AE representative's role</label> <input class="form-control" id="ae-representatives-role" maxlength="100" name="ae-representatives-role" type="text" value="">
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group">
        <label class="form-label" for="testers-user-id">Tester's User ID</label> <input class="form-control form-control-1-8" id="testers-user-id" maxlength="50" name="testers-user-id" type="text" value="">
      </div>
    </fieldset>

    <div class="form-group">
      <fieldset>
        <legend class="form-label">Date of site visit <span class="form-hint">For example, 31 3 1980</span></legend>
        <div class="form-date">
          <div class="form-group form-group-day">
            <label class="" for="date1-day" id="form-group-dayDay">Day <span class="validation-message"></span></label> <input class="form-control" id="date1-day" maxlength="2" name="dobDay"  title="" type="text" value="">
          </div>
          <div class="form-group form-group-month">
            <label class="" for="date1-month" id="form-group-monthMonth">Month <span class="validation-message"></span></label> <input class="form-control" id="date1-month" maxlength="2" name="dobMonth"  title="" type="text" value="">
          </div>
          <div class="form-group form-group-year">
            <label class="" for="date1-year" id="form-group-yearYear">Year <span class="validation-message"></span></label> <input class="form-control" id="date1-year" maxlength="4" name="dobYear"  title="" type="text" value="">
          </div>
        </div>
      </fieldset>
    </div>

    </div>

  </div>

  <div>
      <input class="button" type="submit" value="Save and continue"><br /> <br />
      <a href="choose-section">Cancel</a>
  </div>



</form>
{% endblock %}
